<div id="container">
    <div id="teampicture">
        <a href="<%= root_path %>">
        <% imgpath = "#{@team.name.downcase.gsub(" ","-")}.png" %>
        <%= image_tag imgpath, :height => '150' %></a>
    </div>
    <div id="fixtures_info">
        <div id="lastmatch">
            <p>Last Match:
                <%= @team.fixture.last_match_team %>
                <%= @team.fixture.last_match_result %>
            </p>
        </div>
        <div id="nextmatch">
            <p>Next Match:
            <%= @team.fixture.next_match_team %>
            <%= @team.fixture.next_match_time %>
            </p>
        </div>
    <div id="bbcnewscontainer">
        <ul class="news">
            <% @team.news.each do |news| %>
            <% if news.source == "BBC NEWS" %>
            <li><a href="<%= news.url %>"><%= news.headline %></a></li>
            <% end %>
            <% end %>
        </ul>
        <h5 id="source_byline">Source:  BBC News</h5>
    </div>
    <div id ="othernewscontainer">
          <ul class="news">
            <% @team.news.where("source == 'TEAM INFO'").limit(10).each do |news| %>
            <li><a href="<%= news.url %>"><%= news.headline %></a></li>
            <% end %>
            
            
        </ul>
        
        <h5 id="source_byline">Source:  TEAM Feeds</h5>
    </div>
    <div id ="thirdnewscontainer">
    
    </div>
    <br style="clear:both" />
        
        
    <footer>
        <p class="footerinfo">built with <a href="http://www.ruby-lang.org">Ruby</a> at <a href="http://www.bitmakerlabs.com">Bitmaker Labs</a>.<br /></p>
    </footer>

